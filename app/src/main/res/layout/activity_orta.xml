<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrtaActivity">
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamle Sayısı: "/>
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:id="@+id/txt_hamle_orta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>
    <GridLayout
        android:id="@+id/kolay_gridView_orta"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="2">
        <ImageButton
            android:id="@+id/image1_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image2_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image3_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image7_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image8_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image9_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image10_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/image4_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/image5_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_column="1"
            android:id="@+id/image6_orta"
            android:src="@drawable/brain"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>
    </GridLayout>
</RelativeLayout>