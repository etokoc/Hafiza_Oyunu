<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bastxt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textSize="55sp"
        android:textStyle="bold"
        android:textColor="@color/orta_renk"
        android:background="#D6FFA6"
        android:text="HafÄ±za Oyunu" />
    <ImageView
        android:id="@+id/beyinResim"
        android:layout_alignTop="@id/bastxt"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/brain" />

    <LinearLayout
        android:layout_alignTop="@id/beyinResim"
        android:layout_marginTop="180dp"
        android:id="@+id/linear"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_Kolay"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/kolay"
            android:textSize="36sp"
            android:backgroundTint="@color/kolay_renk"/>

        <Button
            android:id="@+id/button_Orta"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/orta"
            android:textSize="36sp"
            android:backgroundTint="@color/orta_renk"/>

        <Button
            android:id="@+id/button_Zor"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/zor"
            android:textSize="36sp"
            android:backgroundTint="@color/zor_renk"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="75dp"
        android:id="@+id/button_SkorlariListele"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="@string/skorlari_l_stele"
        android:textSize="36sp"
        android:backgroundTint="#D0E317"/>
    <TextView
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product By Ertugrul KOC"
        android:textColor="#D8FFFFFF"/>


</RelativeLayout>